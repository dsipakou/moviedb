<%= form_tag '/movies', :url => {:action => :index}, method: "get" do %>
	<div class="table_header">
		<div class="table_header_text">Фильтр</div>
	</div>
	<!--<div class="table_content">
	</div>-->
	<div class="table_control_panel">
		<div class="OTC CUC LTC" style="width: 100%;"><%= submit_tag "Фильтровать", class: "but_menu", name: nil %><div class="ITC"></div></div>
	</div>
	<div class="table_content_in">
		<div class="item">
			<div class="toolbox-sliders">
				<table width="100%">
					<tr>
						<td valign="center">Год</td>
						<td class="toolbox-sliders">
							<div class="layout-slider">
								<input id="year_slider" type="slider" name="years" value=<%= session[:year_from] ? session[:year_from] : "1903" %><%= ";" %><%= session[:year_to] ? session[:year_to] : "2013" %> />
								<script>
									jQuery("#year_slider").slider({from: 1903, to: 2013, heterogeneity: ['50/2001'], scale: [1903, 1928, 1952, 1976, '2001', 2004, 2007, 2010, 2013], limits: false, step: 1});
								</script>
							</div>
						</td>
					</tr>
					<tr>
						<td>IMDB</td>
						<td class="toolbox-sliders">
							<div class="layout-slider">
								<input id="imdb_slider" type="slider" name="imdb" value=<%= session[:imdb_from] ? session[:imdb_from] : "1" %><%= ";" %><%= session[:imdb_to] ? session[:imdb_to] : "10" %>>
							</div>
							<script>
								jQuery("#imdb_slider").slider({from: 1, to: 10, heterogeneity: ['25/3','50/6'], scale: [1, 3,'6', 8, 10], limits: false, step: 1});
							</script>
						</td>
					</tr>
				</table>
			</div>
		</div>
		<div class="item">
			<div>
				<p><span class="DDControl">Жанр</span></p>
			</div>
			<div>
				<%= render :partial => 'inner_genre', :locals => {:genre => Genre.find(:all)} %>
			</div>
		</div>
		<br />
	</div>

	<div class="table_control_panel">
		<div class="OTC CUC LTC" style="width: 100%;"><%= submit_tag "Фильтровать", class: "but_menu", name: nil %><div class="ITC"></div></div>
	</div>
	<div class="table_bottom">
	</div>
<% end %>
